@using BRT.Models.Entity
@model List<Product>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/Layout.cshtml";
    }

<a id="create" class="btn btn-primary" href="/Product/Create"><i class="fa fa-plus-circle fa-3x" aria-hidden="true"></i><h5>Create New</h5></a>
    <h2>Index</h2>

    <table id="customers">
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Update</th>
            <th>Remove</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Price</td>
            <td><a href="/Product/Edit/@item.Id"><i class="fa fa-recycle" aria-hidden="true"></i></a></td>
            <td><a href="/Product/Remove/@item.Id"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
        </tr>
        }


    </table>



